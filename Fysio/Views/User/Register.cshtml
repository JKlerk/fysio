@{ Layout = null; }
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fysio</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>
<img src="~/img/joey.png" class="h-8 absolute top-0 left-0 m-4 select-none" alt="Sample Photo" />
<div class="grid grid-cols-3 px-5 min-h-screen max-h-screen">
    <div class="flex items-center justify-center col-span-2">
        <div class="w-1/3">
            <div class="mb-10">
                <h1 class="text-2xl font-source font-semibold">The Fysio app</h1>
                <p class="text-gray-600">Better therapy, for a better quality of life</p>
            </div>
            <form enctype="multipart/form-data" method="post" action="/user/register" class="w-full">
                <div class="mb-4">
                    <label class="text-gray-700">Email address</label>
                    <input class="ipt" name="email" placeholder="Email" />
                </div>
                <div class="mb-4">
                    <label class="text-gray-700">Password</label>
                    <input class="ipt" name="password" placeholder="Enter your password" type="password" />
                </div>
                <div class="mb-4">
                    <label class="text-gray-700">Confirm Password</label>
                    <input class="ipt" name="confirmPassword" placeholder="Enter your password" type="password" />
                </div>
                <div class="">
                    <p class="text-gray-700">User image</p>
                    <div class="max-w-2xl rounded-lg bg-gray-50">
                        <div class="m-4">
                            <label class="inline-block mb-2 text-gray-500">File Upload</label>
                            <div class="flex items-center justify-center w-full">
                                <label
                                    class="flex flex-col w-full h-32 border-4 border-blue-200 border-dashed hover:bg-gray-100 hover:border-gray-300">
                                    <div class="flex flex-col items-center justify-center pt-7">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-gray-400 group-hover:text-gray-600"
                                             fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                        </svg>
                                        <p class="pt-1 text-sm tracking-wider text-gray-400 group-hover:text-gray-600">
                                            Attach a file</p>
                                    </div>
                                    <input name="userImage" type="file" class="opacity-0"/>
                                </label>
                            </div>
                        </div>
                    </div>
                </div> 
                <button class="mt-4 py-1 px-2 w-full bg-fysio-header text-white font-bold rounded-lg hover:opacity-75 transition-opacity duration-100" type="submit">Submit</button>
            </form>
        </div>
    </div>
    <div class="flex justify-center">
        <img
            class="max-h-screen col-start-2 col-end-4"
            src="https://images.unsplash.com/photo-1581090465357-c8a1f71f0407?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
        />
    </div>
</div>
